<LinearLayout android:background="@drawable/ed_text"
    android:orientation="vertical"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textAlignment="center"
        android:text="New card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:background="@drawable/item_bg"
        android:id="@+id/ed_name_category"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Add new name category"
        android:layout_width="match_parent"
        android:paddingLeft="40dp"
        android:layout_height="60dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_add_card"
        android:layout_width="190dp"
        android:layout_marginHorizontal="90dp"
        android:layout_height="190dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        android:layout_marginVertical="10dp"

        >

        <ImageView
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/gori"
            android:id="@+id/img_add"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:backgroundTint="@color/pisya"
        android:id="@+id/btn_save"
        android:text="Save"
        android:textColor="@color/whiteBlue"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>